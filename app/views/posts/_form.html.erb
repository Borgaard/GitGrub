<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">  
      <%= simple_form_for(@post, remote: true, html: { class: 'form-horizontal' }) do |f| %>
        <p>
          <%= f.input :place %>
        </p>
        <p>
          <%= f.input :neighborhood %>
        </p>
         <p>
          <%= f.input :time %>
        </p>
         <p>
          <%= f.input :body %>
        </p>
        <p>
          <%= f.button 'submit' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
