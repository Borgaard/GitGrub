<%= render 'layouts/flash' %>
<% if current_user %>
	<% if current_user.name != '' %>
  	<%= "Welcome #{current_user.name}" %>
  <% else %>
  	<%= "Welcome #{current_user.nickname}" %>
  <% end %>
  <%= link_to "Sign out", signout_path %>
<% else %>
  <%= link_to "Sign up with GitHub", "/auth/github" %>
<% end %>
